<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation=" http://www.springframework.org/schema/beans 
	     http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context.xsd">

	<bean class="com.tns.spring.constructor.Certificate"
		name="certificate">
		<constructor-arg value="Android using Kotlin" />

	</bean>

	<bean class="com.tns.spring.constructor.Person" name="person">
		<constructor-arg value="Younus" />
		<constructor-arg value="12" />
		<constructor-arg ref="certificate" />
	</bean>
	<bean class="com.tns.spring.constructor.Addition" name="add">
		<constructor-arg value="12" type="int" index="1" />
		<constructor-arg value="14" type="int" index="0"/>
	</bean>
</beans>
        
        